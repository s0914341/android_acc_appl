<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout android:id="@+id/chart" 
              android:orientation="vertical"
              android:layout_width="fill_parent" 
              android:layout_height="0dp"
              android:layout_weight="10"  >       
</LinearLayout>

<RelativeLayout 
    android:id="@+id/button_layout"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal" >

      <ImageButton 
                android:background="@drawable/buttons_zoom_in" 
            	android:scaleType="fitCenter" 
            	android:layout_width="80dp" 
            	android:layout_height="80dp" 
            	android:layout_toLeftOf="@+id/zoomOut"
            	android:id="@+id/zoomIn" >
      </ImageButton>
      
      <ImageButton 
                android:background="@drawable/buttons_zoom_out" 
            	android:scaleType="fitCenter" 
            	android:layout_width="80dp" 
            	android:layout_height="80dp" 
            	android:layout_toLeftOf="@+id/zoomFit"
            	android:id="@+id/zoomOut">
      </ImageButton> 
      
      <ImageButton 
                android:background="@drawable/buttons_zoom_fit" 
            	android:scaleType="fitCenter" 
            	android:layout_width="80dp" 
            	android:layout_height="80dp" 
            	android:layout_toLeftOf="@+id/saveChart"
            	android:id="@+id/zoomFit">
      </ImageButton> 
      
      <ImageButton 
                android:background="@drawable/buttons_save_chart" 
            	android:scaleType="fitCenter" 
            	android:layout_width="80dp" 
            	android:layout_height="80dp" 
            	android:layout_alignParentRight="true"
            	android:id="@+id/saveChart">
      </ImageButton> 
</RelativeLayout >  

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/DebugView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>
    
</LinearLayout>